{
  "name": "ipfs-postmsg-proxy",
  "version": "0.0.3",
  "description": "Proxy to an IPFS over window.postMessage",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:js": "babel src --out-dir lib",
    "watch": "run-p watch:*",
    "watch:js": "babel src --watch --out-dir lib",
    "test": "run-s build lint test:*",
    "test:node": "mocha test/node.js",
    "test:browser": "run-s test:browser:build test:browser:run",
    "test:browser:build": "browserify test/fixtures/public/iframe/index.js -o test/fixtures/public/iframe/bundle.js",
    "test:browser:run": "karma start --browsers Chrome --single-run",
    "test:browser:watch": "npm-run-all test:browser:build --parallel test:browser:watch:*",
    "test:browser:watch:build": "watchify test/fixtures/public/iframe/index.js -o test/fixtures/public/iframe/bundle.js -v",
    "test:browser:watch:run": "karma start --browsers Chrome",
    "lint": "standard",
    "clean": "rm -rf lib/**",
    "prepublishOnly": "run-s build"
  },
  "author": "Alan Shaw",
  "license": "MIT",
  "dependencies": {
    "callbackify": "^1.1.0",
    "cids": "^0.5.2",
    "ipfs-block": "^0.6.1",
    "is-typedarray": "^1.0.0",
    "postmsg-rpc": "^2.1.1",
    "realistic-structured-clone": "^1.0.1"
  },
  "devDependencies": {
    "async": "^2.6.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browserify": "^14.5.0",
    "hat": "0.0.3",
    "interface-ipfs-core": "^0.36.15",
    "ipfs": "^0.27.4",
    "ipfs-repo": "^0.18.5",
    "karma": "^1.7.1",
    "karma-browserify": "^5.1.2",
    "karma-mocha": "^1.3.0",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "standard": "^10.0.3",
    "watchify": "^3.9.0"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tableflip/ipfs-postmsg-proxy.git"
  },
  "keywords": [
    "IPFS",
    "postMessage",
    "window.postMessage",
    "proxy",
    "rpc"
  ],
  "bugs": {
    "url": "https://github.com/tableflip/ipfs-postmsg-proxy/issues"
  },
  "homepage": "https://github.com/tableflip/ipfs-postmsg-proxy#readme"
}
